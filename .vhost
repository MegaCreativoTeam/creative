    DocumentRoot "PATH/public_html"
    ServerName creative.dev
    ServerAlias www.creative.dev
    ErrorLog "logs/creative.dev-error.log"
    CustomLog "logs/creative.dev-access.log" common
</VirtualHost>

Listen 0.0.0.0:7000
